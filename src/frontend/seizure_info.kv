<SeizureInfoScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: None
            height: self.texture_size[1]
            text: root.info_message
        #Spinner:
        #    id: patient_name_input
        #    text: 'Select Patient'
        #    values: root.get_patient_names()  # Fetch patient names dynamically
        TextInput:
            font_size: '25sp'
            id: seizure_start_input
            hint_text: 'YYYY.MM.DD'
        TextInput:
            font_size: '25sp'
            id: seizure_duration_input
            hint_text: 'Seizure Duration (seconds)'
        TextInput:
            font_size: '25sp'
            id: seizure_type_input
            hint_text: 'Seizure Type (optional)'
        Button:
            font_size: '25sp'
            text: 'Save Seizure Info'
            on_press: root.save_seizure_info(seizure_start_input.text, seizure_duration_input.text, seizure_type_input.text)
        Button:
            font_size: '25sp'
            text: 'Video'
            on_press: app.root.current = 'RecordApp'

        Button:
            font_size: '25sp'
            text: 'Back'
            on_press: app.root.current = 'patient'
