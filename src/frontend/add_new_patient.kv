<AddNewPatientScreen>:
    id: main
    orientation: 'vertical'
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text: root.info_message

    TextInput:
        font_size: '25sp'
        id: number_input
        hint_text: 'Unique Number'
    Button:
        font_size: '25sp'
        text: 'Add'
        on_press: root.update_patient(number_input.text)
    Button:
        font_size: '25sp'
        text: 'My Patients'
        on_press:root.show_list(self)
    #Spinner:
    #    id: patient_list
    #    text: 'Patient List'
    #    values: root.get_patient_list()   # Fetch patient names dynamically
    Button:
        font_size: '25sp'
        text: 'Back'
        on_press: app.root.current = 'doctor'
