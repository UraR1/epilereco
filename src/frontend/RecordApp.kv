<RecordAppScreen>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: image_texture
            size_hint: None, None
            size: 800, 200
            texture: root.video_texture
        Spinner:
            id: patient_id_input
            text: 'Select Patient'
            values: root.get_patient_id()
        Button:
            text: 'Start recording'
            on_press: root.start_recording(self)
        Button:
            text: 'Stop recording'
            on_press: root.stop_recording(self)
            on_release: root.save_comment(comment_input.text)
       #     om_release: root.save_video_info(patient_id)
        Label:
            text: root.info_message
        TextInput:
            id: comment_input
            hint_text: 'Comment'
            multiline: False
        Button:
            text: 'Upload'
            on_press: root.upload_video(self)
            on_release: root.save_comment(comment_input.text)
        Button:
            text: 'Back'
            on_press: app.root.current = 'seizure_info'
